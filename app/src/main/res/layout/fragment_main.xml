<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    tools:context="com.duckwarlocks.klutz.fragments.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">
            <TextView
                android:id="@+id/currentCoordinates"
                android:text="@string/subTitle"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                />

            <View
                android:id="@+id/titleBreak"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@id/currentCoordinates"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:id="@+id/btnContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/titleBreak"
                >
                <Button
                    android:id="@+id/grabCoordinatesBtn"
                    android:text="@string/grabCoordinatesBtnTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/mainMenuBtnMargins"
                    android:onClick="getCoordinates"
                    />

                <Button
                    android:id="@+id/saveCoordinatesBtn"
                    android:text="@string/saveCoordinatesBtnTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/mainMenuBtnMargins"
                    android:onClick="promptCoordinateName"/>
                <ImageView
                    android:id="@+id/pine"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/pineapple"/>
                <ImageView
                    android:id="@+id/cark"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/car_keys_icon"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
