<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <!-- Location -->
    <TextView
        android:id="@+id/locationListItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/savedListItemNameFontSize"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/locationListLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/savedListLatLongFontSize"
        android:layout_below="@id/locationListItem"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/locationListLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/savedListLatLongFontSize"
        android:layout_below="@id/locationListItem"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/locationListLatitude"
        />
    <TextView
        android:id="@+id/locationListCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dip"
        android:textColor="@color/grey"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"

        />
</RelativeLayout>