<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="5dp"
    android:orientation="horizontal"
    android:id="@+id/pieceView"
    >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!-- Location -->
        <TextView
            android:id="@+id/locationListItem"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:textSize="@dimen/savedListItemNameFontSize"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/savedListLeftMargin"
            />

        <TextView
            android:id="@+id/locationListLatitude"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="@dimen/savedListLatLongFontSize"
            android:layout_below="@id/locationListItem"
            android:layout_marginLeft="@dimen/savedListLeftMargin"
            />
        <TextView
            android:id="@+id/locationListLongitude"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="@dimen/savedListLatLongFontSize"
            android:layout_below="@id/locationListItem"
            android:layout_marginLeft="@dimen/savedListLeftMargin"
            android:layout_toRightOf="@id/locationListLatitude"
            />
        <TextView
            android:id="@+id/locationListCityName"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="@dimen/savedListCityNameFontSize"
            android:textColor="@color/grey"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
