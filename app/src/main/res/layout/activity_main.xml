<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:mContext=".MainActivity">

    <TextView
        android:id="@+id/mainTitle"
        android:text="@string/mainTitle"
        android:textSize="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/subTitle"
        android:text="@string/subTitle"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainTitle"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/titleBreak"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/subTitle"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:id="@+id/btnContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleBreak"
        >
        <Button
            android:id="@+id/grabCoordinatesBtn"
            android:text="@string/grabCoordinatesBtnTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mainMenuBtnMargins"
            android:onClick="getCoordinates"
            />

        <Button
            android:id="@+id/locationListBtn"
            android:text="@string/locationListBtnTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mainMenuBtnMargins"
            android:onClick="sendToSavedLocations"
           />

        <Button
            android:id="@+id/searchNearbyBtn"
            android:text="@string/nearbySearchBtnTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mainMenuBtnMargins"
            android:onClick="sendToNearbyLocationsActivity"
            />

    </LinearLayout>

</RelativeLayout>
