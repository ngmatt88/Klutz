<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/prettyBtnImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/pineapple"/>

    <TextView
        android:id="@+id/prettyBtnSpeech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test!"
        android:gravity="center"
        android:background="@drawable/speechbubble"
        android:layout_alignTop="@+id/prettyBtnImg"
        android:layout_toEndOf="@+id/prettyBtnImg" />

</RelativeLayout>